#include <iostream>
#include <iomanip> //для setprecision
#include <clocale>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    double X;
    int N;

    // Запрашиваем ввод у пользователя
    cout << "Введите расстояние (в км), пробежанное в первый день: ";
    cin >> X;
    cout << "Введите количество дней тренировок: ";
    cin >> N;
    if ((X < 0)||(N<0)); //проверка на положительные значения
    printf("Введите положительное значение");

    double totalDistance = 0; 

    //цикл для расчета пробежки за каждый день
    for (int i = 0; i < N; ++i) {
        totalDistance += X; //добавляем дистанцию текущего дня к общей
        X *= 1.1; //увеличиваем дистанцию на 10% для следующего дня
    }

    //выводим результат с точностью до одного знака после запятой
    cout << fixed << setprecision(1);
    cout << "Суммарный путь, пробежанный спортсменом за " << N << " дней: " << totalDistance << " км" << endl;

    return 0;
}

